<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Tables - Thai Restaurant</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <header class="header">
      <h1>Tables</h1>
      <nav aria-label="Main navigation">
        <a href="/">Home</a> | <a href="/orders">Orders</a>
      </nav>
    </header>

    <main>
      <table class="modern-table">
        <thead>
          <tr>
            <th>Number</th>
            <th>Capacity</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% tables.forEach(table => { %>
            <tr>
              <td data-label="Number"><%= table.table_number %></td>
              <td data-label="Capacity"><%= table.capacity %></td>
              <td data-label="Status">
                <span class="status <%= table.status %>"><%= table.status.charAt(0).toUpperCase() + table.status.slice(1) %></span>
              </td>
              <td data-label="Actions">
                <form method="POST" action="/tables/<%= table.table_id %>/status" class="status-form" style="display:inline-flex; align-items:center; gap: 0.5rem;">
                  <label for="status-<%= table.table_id %>" class="sr-only">Update table status</label>
                  <select id="status-<%= table.table_id %>" name="status" class="status-select">
                    <option value="available" <%= table.status === 'available' ? 'selected' : '' %>>Available</option>
                    <option value="occupied" <%= table.status === 'occupied' ? 'selected' : '' %>>Occupied</option>
                    <option value="reserved" <%= table.status === 'reserved' ? 'selected' : '' %>>Reserved</option>
                  </select>
                  <button type="submit" class="update-button">Update</button>
                </form>

                <form method="POST" action="/tables/<%= table.table_id %>/delete" onsubmit="return confirm('Delete this table?');" style="display:inline;">
                  <button type="submit" class="delete-button">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Create Table -->
      <section class="new-order">
        <h2>Create New Table</h2>
        <form method="POST" action="/tables" class="order-form">
          <label for="table_number">Table Number</label>
          <input type="text" id="table_number" name="table_number" required />
          
          <label for="capacity">Capacity</label>
          <input type="number" id="capacity" name="capacity" min="1" required />
          
          <button type="submit">Add Table</button>
        </form>
      </section>
    </main>
  </div>
</body>
</html>
        