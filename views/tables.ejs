<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Manage Tables</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-gray-100 min-h-screen">
  <header class="bg-red-600 text-white p-4 shadow-md flex justify-between items-center">
    <h1 class="text-xl font-bold">🍽️ Tables</h1>
    <div class="space-x-2">
      <a href="/" class="bg-white text-red-600 px-3 py-1 rounded">Home</a>
      <a href="/orders" class="bg-white text-blue-600 px-3 py-1 rounded">Orders</a>
    </div>
  </header>

  <main class="max-w-6xl mx-auto p-6">
    <form method="POST" action="/tables" class="bg-white p-4 rounded-xl shadow grid grid-cols-1 md:grid-cols-4 gap-3 mb-6">
      <input name="table_number" required placeholder="Table Number" class="border p-2 rounded" />
      <input name="capacity" required type="number" placeholder="Capacity" class="border p-2 rounded" />
      <select name="status" class="border p-2 rounded">
        <option value="available">available</option>
        <option value="occupied">occupied</option>
        <option value="reserved">reserved</option>
      </select>
      <button class="bg-green-500 text-white rounded px-4 py-2">Add Table</button>
    </form>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% tables.forEach(t => {
        const color = t.status === 'available' ? 'bg-green-50 text-green-800' :
                      t.status === 'occupied' ? 'bg-yellow-50 text-yellow-800' : 'bg-blue-50 text-blue-800';
      %>
        <div class="bg-white p-4 rounded-xl shadow flex flex-col justify-between">
          <div>
            <h2 class="text-lg font-bold">Table <%= t.table_number %></h2>
            <p class="text-sm text-gray-600">Capacity: <%= t.capacity %></p>
            <span class="mt-3 inline-block px-3 py-1 rounded-full text-xs font-medium <%= color %>"><%= t.status %></span>
          </div>

          <form method="POST" action="/tables/update/<%= t.table_id %>" class="mt-4 space-y-2">
            <input name="table_number" value="<%= t.table_number %>" required class="w-full border p-2 rounded" />
            <input name="capacity" value="<%= t.capacity %>" required type="number" class="w-full border p-2 rounded" />
            <select name="status" class="w-full border p-2 rounded">
              <option value="available" <%= t.status === 'available' ? 'selected' : '' %>>available</option>
              <option value="occupied" <%= t.status === 'occupied' ? 'selected' : '' %>>occupied</option>
              <option value="reserved" <%= t.status === 'reserved' ? 'selected' : '' %>>reserved</option>
            </select>

            <div class="flex justify-between">
              <button class="bg-yellow-500 text-white px-3 py-1 rounded">Update</button>
              <a href="/tables/delete/<%= t.table_id %>" onclick="return confirm('Delete table?')" class="bg-red-500 text-white px-3 py-1 rounded">Delete</a>
            </div>
          </form>
        </div>
      <% }) %>
    </div>
  </main>

  <script src="/script.js"></script>
</body>
</html>
